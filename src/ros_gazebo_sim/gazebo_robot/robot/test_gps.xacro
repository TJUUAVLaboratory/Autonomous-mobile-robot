<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="test_gps">

  <xacro:property name="M_PI" value="3.14159"/>
    <xacro:arg name="robot_namespace" default="/" />

  <!-- Base Footprint -->
  <link name="base_footprint" />

  <!-- Base Link-->
  <joint name="footprint" type="fixed" >
   <parent link="base_footprint" />
    <child link="base_link" />
    <origin xyz="0 0 0.05" rpy="0 0 0" />
  </joint>

  <link name="base_link" >
    <visual>
      <geometry>
        <box size="0.5 0.5 0.1" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.5 0.1" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="10"/>
      <inertia ixx="3.0" ixy="0.0" ixz="0.0"
               iyy="3.0" iyz="0.0"
               izz="3.0" />
    </inertial>
  </link>


    <joint name="imu_frame_joint" type="fixed">
      <parent link="base_link"/>
      <child link="gps_link"/>
      <origin xyz="0 0 0.8" rpy="0 0 -3.14" />
    </joint>

  <!-- UM6-IMU -->
  <xacro:include filename="$(find gazebo_robot)/sensors/gps/urdf/gps.xacro"/>
  <xacro:gps  robot_namespace="$(arg robot_namespace)"/>



</robot>
